@model IEnumerable<GoEvent.Core.Models.Event>
@{
    ViewBag.Title = "Mine";
}

<h1>My Upcoming Events</h1>
<hr />
<div class="row">
    <ul class="evento-container col-md-4">
        @foreach (var evento in Model)
    {
            <li>
                <div class="date">
                    <div class="month">
                        @evento.DateTime.ToString("MMM")
                    </div>
                    <div class="day">
                        @evento.DateTime.ToString("d ")
                    </div>
                </div>
                <div class="details">
                    <span class="artist">
                        @evento.Venue
                    </span>
                    <span class="genre">
                        @evento.Genre.Name
                    </span>
                    <div class="actions">
                        <a href="@Url.Action("Edit","Events",new{id=evento.Id})">Edit</a> |
                        <a href="#" class="js-cancel-evento" data-evento-id="@evento.Id">Delete</a>
                    </div>
                </div>
            </li>
    }
    </ul>
</div>
@section scripts{
    <script>
        $(document)
            .ready(function() {
                $(".js-cancel-evento")
                    .click(function(e) {
                        var link = $(e.target);

                        bootbox.confirm({
                            title: "Delete",
                            message: "Are you sure you want to delete this evento ?",
                            buttons: {
                                confirm: {
                                    label: 'Yes',
                                    className: 'btn-danger'
                                },
                                cancel: {
                                    label: 'No',
                                    className: 'btn-default'
                                }
                            },
                            callback: function(result) {
                                if (result) {
                                    $.ajax({
                                            url: "/api/events/" + link.attr("data-evento-id"),
                                            method: "DELETE"
                                        })
                                        .done(function() {
                                            link.closest("li")
                                                .fadeOut(function() {
                                                    $(this).remove();
                                                });
                                        })
                                        .fail(function() {
                                            alert("Event not deleted. Something wrong!");
                                        });

                                } else {
                                    bootbox.hideAll();
                                }

                            }
                        });
                    });
            });
    </script>
}
