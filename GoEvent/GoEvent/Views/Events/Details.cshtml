@model GoEvent.Core.ViewModels.EventDetailsViewModel
@{
    ViewBag.Title = "Details";
}


<h2>Details</h2>
<hr />

<h1>
    @Model.Event.Artist.Name
    @if (User.Identity.IsAuthenticated)
    {
        if (Model.IsFollowing)
        {
            <button class="btn btn-info">Following</button>
        }
        else
        {
            <button class="btn btn-default">Follow</button>
        }
    }
</h1>

<p>Performing at <strong> @Model.Event.Venue</strong> on <strong>@Model.Event.DateTime.ToString("d MMM")</strong> 
    at <strong>@Model.Event.DateTime.ToString("HH:mm")</strong></p>

@if (User.Identity.IsAuthenticated && Model.IsAttending)
{
    <p>You are going to this Event.</p>
}